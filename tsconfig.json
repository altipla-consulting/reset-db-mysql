{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "moduleResolution": "node",
    "verbatimModuleSyntax": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "baseUrl": "src",
    "allowSyntheticDefaultImports": true,
    "types": [
      "node"
    ]
  },
  "include": [
    "src/**/*",
    "example/**/*",
  ],
  "exclude": [
    "node_modules"
  ]
}
